{
    "compilerOptions": {
        "alwaysStrict": true,
        "baseUrl": "./",
        "charset": "utf8",
        "jsx": "react",
        "strict": true,
        "module": "es6",
        "rootDirs": ["src", "stories"],
        "newLine": "LF",
        "moduleResolution": "node",
        "declaration": true,
        "target": "es6",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noEmitOnError": false,
        "lib": ["es6", "dom"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.test.tsx", "**/*.test.ts"]
}
