{
  "name": "@vkbansal/react-date-primitives",
  "version": "0.8.0-beta.1",
  "description": "Primitives for building flexible date components with react",
  "keywords": [
    "date",
    "date-range",
    "date-picker",
    "react",
    "react-component"
  ],
  "main": "./lib/index.js",
  "module": "./esm/index.js",
  "esnext": "./esnext/index.js",
  "typings": "./esm/index.d.ts",
  "author": {
    "name": "Vivek Kumar Bansal",
    "email": "vkb0310@gmail.com",
    "url": "https://vkbansal.me"
  },
  "license": "MIT",
  "scripts": {
    "start": "node webpack.devserver.js",
    "lint": "eslint --ext .ts --ext .jsx src",
    "test": "jest --no-cache",
    "fmtc": "prettier --check 'src/**/*.{ts,tsx}'",
    "coverage": "jest --no-cache --coverage",
    "build": "yarn run build:esm && yarn run build:cjs && yarn run build:esnext",
    "build:esm": "rimraf ./esm && tsc --project tsconfig.build.json --target es5 --module es6 --outDir ./esm",
    "build:cjs": "rimraf ./lib && tsc --project tsconfig.build.json --target es5 --module commonjs --outDir ./lib",
    "build:esnext": "rimraf ./esnext && tsc --project tsconfig.build.json --target es6 --module es6 --outDir ./esnext",
    "prepublishOnly": "yarn run build",
    "preversion": "yarn lint && yarn prettier && yarn test"
  },
  "files": [
    "esm",
    "lib",
    "esnext"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vkbansal/react-date-primitives.git"
  },
  "bugs": {
    "url": "https://github.com/vkbansal/react-date-primitives/issues"
  },
  "homepage": "https://github.com/vkbansal/react-date-primitives#readme",
  "peerDependencies": {
    "react": "^16.8.0",
    "react-dom": "^16.8.0"
  },
  "dependencies": {
    "@types/react": "^16.8.0"
  },
  "devDependencies": {
    "@testing-library/react": "^9.3.2",
    "@testing-library/react-hooks": "^3.2.1",
    "@types/jest": "^24.0.23",
    "@types/react-dom": "~16.9.4",
    "@typescript-eslint/eslint-plugin": "^2.9.0",
    "@typescript-eslint/parser": "^2.8.0",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-react": "^7.16.0",
    "jest": "24.9.0",
    "prettier": "^1.19.1",
    "react": "~16.12.0",
    "react-dom": "~16.12.0",
    "react-test-renderer": "^16.12.0",
    "rimraf": "~3.0.0",
    "ts-jest": "~24.1.0",
    "tslint": "~5.16.0",
    "typescript": "~3.7.2"
  }
}
