{
  "name": "@vkbansal/react-date-primitives",
  "version": "1.0.0",
  "description": "Primitives for building flexible date components with react",
  "keywords": [
    "date",
    "date-range",
    "date-picker",
    "react",
    "react-component"
  ],
  "main": "./lib/index.js",
  "module": "./esm/index.js",
  "esnext": "./esnext/index.js",
  "typings": "./esm/index.d.ts",
  "author": {
    "name": "Vivek Kumar Bansal",
    "email": "vkb0310@gmail.com",
    "url": "https://vkbansal.me"
  },
  "license": "MIT",
  "scripts": {
    "release": "standard-version",
    "lint": "eslint --ext .ts --ext .jsx src",
    "test": "jest --no-cache src",
    "fmtc": "prettier --check 'src/**/*.{ts,tsx}'",
    "coverage": "jest --no-cache --coverage",
    "build": "yarn run build:esm && yarn run build:cjs && yarn run build:esnext",
    "build:esm": "rimraf ./esm && tsc --project tsconfig.build.json --target es5 --module es6 --outDir ./esm",
    "build:cjs": "rimraf ./lib && tsc --project tsconfig.build.json --target es5 --module commonjs --outDir ./lib",
    "build:esnext": "rimraf ./esnext && tsc --project tsconfig.build.json --target es6 --module es6 --outDir ./esnext",
    "readme": "ts-node --compiler-options '{\"module\": \"commonjs\"}' tools/build-readme.ts",
    "prepublishOnly": "yarn run build",
    "preversion": "yarn lint && yarn fmtc && yarn test"
  },
  "files": [
    "esm",
    "lib",
    "esnext"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vkbansal/react-date-primitives.git"
  },
  "bugs": {
    "url": "https://github.com/vkbansal/react-date-primitives/issues"
  },
  "homepage": "https://github.com/vkbansal/react-date-primitives#readme",
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "react": "^16.8.0",
    "react-dom": "^16.8.0"
  },
  "devDependencies": {
    "@testing-library/react": "^10.4.5",
    "@testing-library/react-hooks": "^3.3.0",
    "@types/jest": "^26.0.4",
    "@types/react": "^16.9.43",
    "@types/react-dom": "~16.9.8",
    "@typescript-eslint/eslint-plugin": "^3.6.0",
    "@typescript-eslint/parser": "^3.6.0",
    "eslint": "^7.4.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-react": "^7.20.3",
    "globby": "^11.0.1",
    "husky": "^4.2.5",
    "jest": "26.1.0",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "react": "~16.13.1",
    "react-dom": "~16.13.1",
    "react-test-renderer": "^16.13.1",
    "rimraf": "~3.0.2",
    "standard-version": "^8.0.1",
    "ts-jest": "~26.1.1",
    "ts-node": "^8.10.2",
    "tslint": "~6.1.2",
    "typescript": "~3.9.6"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint",
      "prettier --check",
      "sh tools/typecheck-staged.sh"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "node ./tools/lint-commit-message.js \"$(cat $HUSKY_GIT_PARAMS)\""
    }
  }
}
