{
  "compilerOptions": {
    "alwaysStrict": true,
    "baseUrl": "./",
    "charset": "utf8",
    "jsx": "react",
    "strict": true,
    "module": "es6",
    "newLine": "LF",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "target": "es6",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noEmitOnError": false,
    "lib": ["dom", "esnext"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["./src"],
  "exclude": ["**/__tests__/**", "**/node_modules/**"]
}
